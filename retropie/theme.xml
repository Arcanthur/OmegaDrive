<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>
	<view name="system">
	
		<text name="system_name_1" extra="true">
			<text>Omegadrive</text>
			<fontPath>./../art/medium.otf</fontPath>
			<alignment>left</alignment>
			<color>a0a0a0</color>
			<fontSize>0.025</fontSize>
			<origin>0 0</origin>
			<pos>0.12 0.308</pos>
			<size>0 0</size>
		</text>
		<text name="system_name_2" extra="true">
			<text>Settings</text>
			<fontPath>./../art/medium.otf</fontPath>
			<alignment>left</alignment>
			<color>cfcfcf</color>
			<fontSize>0.08</fontSize>
			<origin>0 0</origin>
			<pos>0.12 0.325</pos>
			<size>0 0</size>
		</text>
		<image name="dividers" extra="true">
			<tile>false</tile>
			<path>./../art/lines.png</path>
			<color>eeeeeebb</color>
			<size>0 0</size>
			<pos>0.12 0.46</pos>
		</image>

		<text name="description" extra="true">
			<text>Change the settings for your system including WiFi and Bluetooth. You can install and manage packages ranging from emulators, media players, and new front ends.  </text>
			<fontPath>./../art/regular.ttf</fontPath>
			<alignment>left</alignment>
			<forceUppercase>0</forceUppercase>
			<fontSize>0.024</fontSize>
			<color>a0a0a0</color>
			<lineSpacing>1.18</lineSpacing>
			<origin>0 0</origin>
			<pos>0.12 0.508</pos>
			<size>0.32 0.20</size>	  
		</text>
		
	</view>
	<view name="detailed, video">
		<image name="background" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./../art/systembg/retropie.png</path>
		</image>
		<textlist name="gamelist">
			<selectorOffsetY>-0.013</selectorOffsetY>
			<selectorHeight>0.058</selectorHeight>
			<selectorColor>0000009d</selectorColor>
			<fontPath>./../art/bold.ttf</fontPath>
			<fontSize>0.022</fontSize>
			<lineSpacing>2.75</lineSpacing>
			<primaryColor>ffffff78</primaryColor>
			<secondaryColor>ffffff4a</secondaryColor>
			<selectedColor>ffffff</selectedColor>
			<size>0.44 0.54</size>
			<pos>0.294 0.535</pos>
			<horizontalMargin>0.01</horizontalMargin>
			<origin>0.5 0.5</origin>
		</textlist>
	</view>
	<view  name="detailed">
		<image name="md_thumbnail">
            <origin>0.5 0.5</origin>
            <pos>0.7445 0.5175</pos>
            <maxSize>0.39 0.52</maxSize>
		</image>	
	</view>
	<view name="video">   
        <video name="md_video">
            <origin>0.5 0.5</origin>
            <pos>0.7445 0.5175</pos>
            <maxSize>0.39 0.52</maxSize>
            <delay>1.5</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
        </video>		
	</view>	
</theme>